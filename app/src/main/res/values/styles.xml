<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:dropDownListViewStyle">@style/SpinnerStyle</item>
        <item name="android:buttonStyle">@style/ButtonStyle</item>
        <item name="android:textViewStyle">@style/TextViewStyle</item>
        <item name="editTextStyle">@style/EditTextStyle</item>
        <item name="android:listViewStyle">@style/listViewStyle</item>
        <item name="android:scrollViewStyle">@style/scrollViewStyle</item>
    </style>

    <style name="SpinnerStyle" parent="Widget.AppCompat.ListView.DropDown">
        <item name="android:divider">#d1d1d1</item>
        <item name="android:dividerHeight">1dp</item>
    </style>

    <style name="listViewStyle" parent="Widget.AppCompat.ListView">
        <item name="android:requiresFadingEdge">vertical</item>
        <item name="android:fadingEdgeLength">12dp</item>
        <item name="android:scrollbarThumbVertical">@drawable/custom_scroll_bar</item>
    </style>

    <style name="expandableListViewStyle">
        <item name="android:requiresFadingEdge">vertical</item>
        <item name="android:fadingEdgeLength">24dp</item>
        <item name="android:scrollbarThumbVertical">@drawable/custom_scroll_bar</item>
    </style>

    <style name="scrollViewStyle" parent="Widget.AppCompat.ListView">
        <item name="android:requiresFadingEdge">vertical</item>
        <item name="android:fadingEdgeLength">24dp</item>
        <item name="android:scrollbarThumbVertical">@drawable/custom_scroll_bar</item>
    </style>

    <style name="ButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:textColor">?attr/font_color</item>
    </style>

    <style name="TextViewStyle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">?attr/font_color</item>
    </style>

    <style name="EditTextStyle" parent="@android:style/Widget.EditText">
        <item name="android:textColor">?attr/font_color</item>
    </style>

    <!-- Choose Scenario Activity -->
    <style name="HamburgerButton">
        <item name="android:layout_width">175dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:textSize">?attr/font_medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/custom_button</item>
    </style>

    <style name="ChooseScenarioItem">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">?attr/font_large</item>
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Category">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">?attr/font_large</item>
        <item name="android:background">#4AA</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
    </style>

    <style name="CategoryName" parent="Category">
        <item name="android:layout_weight">0.8</item>
        <item name="android:paddingLeft">?android:attr/expandableListPreferredItemPaddingLeft</item>
    </style>

    <style name="EditText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_weight">0.7</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:textSize">?attr/font_large</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="EditTextConfirmButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">0.3</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:textSize">?attr/font_medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/confirm_button</item>
    </style>

    <!-- Custom alert dialog -->
    <style name="alertDialogButtons">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">0.5</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:textSize">?attr/font_medium</item>
        <item name="android:background">@drawable/custom_button</item>
    </style>

    <!-- Settings Activity -->
    <style name="SettingsRowLayouts">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="SettingsTitles">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">15dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">?attr/font_large</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SettingsTopics">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">0.5</item>
        <item name="android:textSize">?attr/font_medium</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="SettingsSpinners">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">0.5</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="SettingsSeekbars">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">0.5</item>
        <item name="android:max">10</item>
    </style>

    <style name="SettingsFlags">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">0.5</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:onClick">languageSelected</item>
    </style>

    <!-- Answer dialog -->
    <style name="answerTopics">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">20dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">?attr/font_large</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="answerColorButtons">
        <item name="android:layout_width">75dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">5dp</item>
    </style>

    <!-- Create Scene and Scenario -->
    <style name="createScenarioMovementButtons">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">15dp</item>
        <item name="android:textSize">?attr/font_medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/custom_button</item>
    </style>

    <!-- Create Scene Activity -->
    <style name="createSceneImagePreviewLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">250dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginLeft">20dp</item>
    </style>

    <style name="createSceneImageOptionsLayout">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">0.25</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="createSceneImageOptionsTopics">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">?attr/font_medium</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="createSceneImageOptionsSpinners">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:gravity">right</item>
        <item name="android:background">@drawable/spinner_background</item>
    </style>

    <!-- Fonts -->
    <style name="FontStyle">
    </style>

    <style name="FontStyle.Small">
        <item name="font_small">14dp</item>
        <item name="font_medium">16dp</item>
        <item name="font_large">18dp</item>
        <item name="font_xlarge">20dp</item>
    </style>

    <style name="FontStyle.Medium">
        <item name="font_small">18dp</item>
        <item name="font_medium">20dp</item>
        <item name="font_large">22dp</item>
        <item name="font_xlarge">24dp</item>
    </style>

    <style name="FontStyle.Large">
        <item name="font_small">22dp</item>
        <item name="font_medium">24dp</item>
        <item name="font_large">26dp</item>
        <item name="font_xlarge">28dp</item>
    </style>

    <style name="FontStyle.Small.Black">
        <item name="font_color">#000</item>
    </style>

    <style name="FontStyle.Small.Red">
        <item name="font_color">@color/colorRed</item>
    </style>

    <style name="FontStyle.Small.Green">
        <item name="font_color">@color/colorGreen</item>
    </style>

    <style name="FontStyle.Small.Blue">
        <item name="font_color">@color/colorBlue</item>
    </style>

    <style name="FontStyle.Medium.Black">
        <item name="font_color">#000</item>
    </style>

    <style name="FontStyle.Medium.Red">
        <item name="font_color">@color/colorRed</item>
    </style>

    <style name="FontStyle.Medium.Green">
        <item name="font_color">@color/colorGreen</item>
    </style>

    <style name="FontStyle.Medium.Blue">
        <item name="font_color">@color/colorBlue</item>
    </style>

    <style name="FontStyle.Large.Black">
        <item name="font_color">#000</item>
    </style>

    <style name="FontStyle.Large.Red">
        <item name="font_color">@color/colorRed</item>
    </style>

    <style name="FontStyle.Large.Green">
        <item name="font_color">@color/colorGreen</item>
    </style>

    <style name="FontStyle.Large.Blue">
        <item name="font_color">@color/colorBlue</item>
    </style>

    <!-- Splash screen -->
    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

</resources>
